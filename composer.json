{
    "name": "edlugz/daraja",
    "description": "PHP/Laravel package for Mpesa Daraja",
    "license": "MIT",
    "authors": [
        {
            "name": "Eddy Lugaye",
            "email": "eddy.lugaye@gmail.com"
        }
    ],
    "homepage": "https://github.com/edlugz/daraja",
    "keywords": ["PHP", "Laravel", "Daraja"],
    "require": {
        "php": "^8.3",
        "guzzlehttp/guzzle": "^7.8",
        "illuminate/support": "^11.0 || ^12.0",
        "illuminate/contracts": "^11.0 || ^12.0",
        "ext-openssl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0 || ^12.0",
        "orchestra/testbench": "^9.0 || ^10.0"
    },
    "autoload": {
        "psr-4": {
            "EdLugz\\Daraja\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EdLugz\\Daraja\\Tests\\": "tests"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "EdLugz\\Daraja\\DarajaServiceProvider"
            ],
            "aliases": {
                "Daraja": "EdLugz\\Daraja\\Facades\\Daraja"
            }
        }
    }
}
